{
    "apiVersion": "template.openshift.io/v1",
    "kind": "Template",
    "metadata": {
        "name": "${APP_NAME}-template"
    },
    "labels": {
        "application": "demo-feign",
        "createdBy": "ZCVV"
    },
    "objects": [
        {
            "kind": "Deployment",
            "apiVersion": "apps/v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "matchLabels": {
                        "app": "${APP_NAME}"
                    }
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": "${IMAGE}",
                                "resources": {},
                                "env": [
                                    {
                                        "name": "ENVIRONMENT",
                                        "value": "DEV"
                                    },
                                    {
                                        "name": "SPRING_PROFILES_ACTIVE",
                                        "value": "${SPRING_PROFILES_ACTIVE}"
                                    },
                                    {
                                        "name": "SPRING_CONFIG_LOCATION",
                                        "value": "file:/usr/app/config/"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "demo-feign-volume",
                                        "readOnly": false,
                                        "mountPath": "/usr/app/config/"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "demo-feign-volume",
                                "projected": {
                                    "sources": [
                                        {
                                            "configMap": {
                                                "name": "demo-feign-cm"
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },
                "strategy": {}
            },
            "status": {}
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {
                    "app": "${APP_NAME}"
                },
                "name": "${APP_NAME}"
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "port": 8080,
                        "protocol": "TCP",
                        "targetPort": 8080
                    },
                    {
                        "name": "80-tcp",
                        "port": 80,
                        "protocol": "TCP",
                        "targetPort": 8080
                    },
                    {
                        "name": "10334-tcp",
                        "port": 10334,
                        "protocol": "TCP",
                        "targetPort": 10334
                    },
                    {
                        "name": "57743-tcp",
                        "port": 57743,
                        "protocol": "TCP",
                        "targetPort": 57743
                    },
                    {
                        "name": "443-tcp",
                        "port": 443,
                        "protocol": "TCP",
                        "targetPort": 443
                    }

                ],
                "selector": {
                    "app": "${APP_NAME}"
                },
                "type": "ClusterIP"
            }
        },
        {
            "apiVersion": "route.openshift.io/v1",
            "kind": "Route",
            "metadata": {
                "labels": {
                    "app": "${APP_NAME}"
                },
                "name": "${APP_NAME}"
            },
            "spec": {
                "host": "${ROUTER_HOST}",
                "port": {
                    "targetPort": "8080-tcp"
                },
                "to": {
                    "kind": "Service",
                    "name": "${APP_NAME}"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "IMAGE",
            "required": false,
            "description": "Docker image name, injected in pipeline execution."
        },
        {
            "name": "APP_NAME",
            "required": true,
            "description": "Application Name."
        },
        {
            "name": "ENV",
            "required": true,
            "description": "Environment."
        },
        {
            "name": "SPRING_PROFILES_ACTIVE",
            "required": true,
            "description": "Spring active profiles."
        },
        {
            "name": "ROUTER_HOST",
            "required": true,
            "description": "Application router host."
        }
    ]
}